{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PatientFlowUpdate",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "current_load": {
      "type": "integer",
      "minimum": 0
    },
    "triage_wait_minutes": {
      "type": "number",
      "minimum": 0
    },
    "er_queue_length": {
      "type": "integer",
      "minimum": 0
    },
    "bed_occupancy": {
      "type": "object",
      "properties": {
        "total_beds": {
          "type": "integer",
          "minimum": 0
        },
        "occupied": {
          "type": "integer",
          "minimum": 0
        },
        "icu_occupied": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["total_beds", "occupied"]
    },
    "upcoming_admissions": {
      "type": "integer",
      "minimum": 0
    },
    "average_turnover_minutes": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["timestamp", "current_load", "bed_occupancy"]
}
